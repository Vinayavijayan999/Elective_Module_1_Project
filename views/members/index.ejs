<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Arts Club</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">

</head>
<body  class="container" style="margin-top: 50px; background-image: linear-gradient(rgb(186, 230, 238), rgb(178, 225, 231), rgba(146, 224, 238, 0.267)); height: 702px;">
<center><h1 style="color: slategray;">ARTS CLUB!</h1></center>
    <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
    <% } %>

    <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
    <% } %>

    <div class="card"> 
        <div class="card-header">
            <ul class="nav nav-pills w-100">
                <li class="nav-pill active">
                    <a style="background-color: rgba(187, 236, 245, 0.555);" class="nav-link">Members joined:</a>
                </li>
                <li class="nav-pill ml-auto">
                    <a style="background-color: rgb(80, 191, 211);" class="nav-link active" href="/members/add">Add Members</a>
                </li>
            </ul>
        </div>
    <div class="card-body">
        
        <% if(data.length) { %>
        <table class="table" style="border-left: 5px; border-color: black;">
            <thead>
                <tr>
                    <th scope="col">Sl No.</th>
                    <th scope="col">Name</th>
                    <th scope="col">Interested in</th>
                    <th width="200px">Action</th>
                </tr>
            </thead>
            <tbody>
            <% for(var i = 0; i< data.length; i++) { %>
                <tr>
                    <th scope="row"><%= (i+1) %></th>
                    <td><%= data[i].name%></td>
                    <td><%= data[i].field%></td>
                    <td>
                        <a style="background-color: rgb(97, 218, 226);" class="btn btn-success edit" href="../members/edit/<%=data[i].id%>">Edit</a>                       
                        <a style="background-color: rgb(97, 218, 226);" class="btn btn-danger delete" onclick="return alert('Are You sure?')" href="../members/delete/<%=data[i].id%>">Delete</a>                       
                    </td>
                </tr>
            <% } %>
            </tbody>
        </table>
        <% } %>
        
        <!-- if result is empty -->
        <% if(!data.length) { %>
            <center><p style="background-color:  rgba(146, 224, 238, 0.267); height: 110px; font-size: 32px; color: mediumturquoise;" class="text-center">Welcome to the Arts Club <br> Come  and Join! </p></center>
        <% } %>

        </div>
    </div>

</body>
</html>